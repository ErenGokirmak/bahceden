<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/producerAnalyticsTopBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/bahceden_foreground"
        android:paddingVertical="8dp"
        android:paddingHorizontal="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/producerAnalyticsBackButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/producerAnalyticsTopBarNameText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/bahceden_green"
            android:fontFamily="@font/nexa_heavy"
            android:text="Shop Now"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cart"
            app:tint="@color/bahceden_green" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paymentActivityItemsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical"
        android:layout_marginVertical="2dp"/>

    <RadioGroup
        android:id="@+id/paymentActivityPayMethodBtnGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/paymentActivityPayCash"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Pay Cash at Door"
                android:fontFamily="@font/nexa_heavy"
                android:autoSizeTextType="uniform"
                android:padding="8dp"/>
            <RadioButton
                android:id="@+id/paymentActivityPayCredit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Pay with Credit Card"
                android:fontFamily="@font/nexa_heavy"
                android:autoSizeTextType="uniform"
                android:padding="8dp"/>

        </LinearLayout>
    </RadioGroup>

    <TextView
        android:id="@+id/paymentActivityTotalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:layout_marginHorizontal="8dp"
        android:text="Total : 0000$"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginVertical="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:weightSum="1"
        android:layout_marginVertical="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:text="Average Delivery Time of the Producer"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_heavy"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:text=":"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_heavy"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:text="Last wednesday of never ending month"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_heavy"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="@drawable/long_button_background"
        android:backgroundTint="@color/bahceden_green"
        android:text="Order Now"
        android:autoSizeTextType="uniform"
        android:padding="16dp"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"/>

</LinearLayout>