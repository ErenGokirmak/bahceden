<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartProductImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/jam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_heavy"
        android:text="Cherry Jam"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cartProductImage"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cartProductName"
        android:text="#007251"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsun"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        app:layout_constraintStart_toStartOf="@id/cartProductName"/>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        android:background="@color/darkGray"
        app:layout_constraintStart_toEndOf="@id/city"
        app:layout_constraintTop_toTopOf="@id/city"
        app:layout_constraintBottom_toBottomOf="@id/city"/>

    <TextView
        android:id="@+id/amountSoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        app:layout_constraintBottom_toBottomOf="@id/cartProductImage"
        android:text="Amount Sold : "
        android:textColor="@color/black"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/amountSoldText"
        app:layout_constraintBottom_toBottomOf="@id/cartProductImage"
        android:text="255"
        android:textColor="@color/black"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/earningsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        app:layout_constraintBottom_toTopOf="@id/amountSoldText"
        android:text="Earnings : "
        android:textColor="@color/black"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/earningsText"
        app:layout_constraintBottom_toBottomOf="@id/earningsText"
        android:text="1500$"
        android:textColor="@color/black"
        android:fontFamily="@font/nexa_heavy"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 KG"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        app:layout_constraintStart_toEndOf="@id/divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>