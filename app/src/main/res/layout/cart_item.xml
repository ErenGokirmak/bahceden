<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/bahceden_foreground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartProductImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_heavy"
        android:text="Cherry Jam"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cartProductImage"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        android:layout_marginStart="75dp"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/cartProductAdd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/add_foreground"
        app:layout_constraintBottom_toBottomOf="@id/cartProductImage"
        app:layout_constraintEnd_toEndOf="@id/cartProductName"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/cartProductRemove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/remove_foreground"
        app:layout_constraintBottom_toBottomOf="@id/cartProductAdd"
        app:layout_constraintStart_toStartOf="@id/cartProductName"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/cartProductAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_heavy"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/cartProductRemove"
        app:layout_constraintEnd_toStartOf="@id/cartProductAdd"
        app:layout_constraintBottom_toBottomOf="@id/cartProductAdd"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:id="@+id/cartProductDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/rubbish_foreground"
        app:layout_constraintTop_toTopOf="@id/cartProductImage"
        app:layout_constraintBottom_toBottomOf="@id/cartProductImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd ="16dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>