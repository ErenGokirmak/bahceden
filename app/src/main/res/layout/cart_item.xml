<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartProductImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/jam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_heavy"
        android:text="Cherry Jam"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cartProductImage"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="@id/buttonLayout"
        app:layout_constraintTop_toTopOf="@id/cartProductName"/>


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsun"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        app:layout_constraintStart_toStartOf="@id/cartProductName"/>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        android:background="@color/darkGray"
        app:layout_constraintStart_toEndOf="@id/city"
        app:layout_constraintTop_toTopOf="@id/city"
        app:layout_constraintBottom_toBottomOf="@id/city"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 KG"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        app:layout_constraintStart_toEndOf="@id/divider"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decrement"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_semi_circle_2"
            android:padding="7dp"
            android:drawableTop="@drawable/plus"
            android:drawableTint="@color/plus_green"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_square"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toEndOf="@id/decrement"
            app:layout_constraintEnd_toStartOf="@id/increment"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/increment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_semi_circle_1"
            android:padding="7dp"
            android:drawableTop="@drawable/minus"
            android:drawableTint="@color/minus_red"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$000"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        app:layout_constraintTop_toTopOf="@id/buttonLayout"
        app:layout_constraintBottom_toBottomOf="@id/buttonLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>