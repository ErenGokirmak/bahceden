<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productActivity">


    <ImageView
        android:id="@+id/pic"
        android:layout_width="346dp"
        android:layout_height="211dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        app:srcCompat="@drawable/patlican" />

    <TextView
        android:id="@+id/dukkanName"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:text="Company Name"
        app:layout_constraintBottom_toTopOf="@+id/pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

    <TextView
        android:id="@+id/direction"
        android:layout_width="183dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="Filter direction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic" />


    <Button
        android:id="@+id/addToCart"
        android:layout_width="300dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/long_button_backgroun"
        android:text="Add to Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/pic"
        app:layout_constraintEnd_toEndOf="@+id/pic"
        app:layout_constraintTop_toTopOf="@+id/pic"
        app:layout_constraintVertical_bias="0.633"
        app:srcCompat="@drawable/favorite"
        app:tint="@color/heart"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pic"
        app:layout_constraintEnd_toEndOf="@+id/pic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heart"
        app:layout_constraintTop_toBottomOf="@+id/heart"
        app:layout_constraintVertical_bias="0.379"
        app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />
    <include
        layout="@layout/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@id/direction"
        app:layout_constraintBottom_toTopOf="@id/addToCart"
        />
    <include
        layout="@layout/bottom_app_bar"


        />

</androidx.constraintlayout.widget.ConstraintLayout>