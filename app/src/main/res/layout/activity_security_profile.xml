<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityProfileActivity">

    <LinearLayout
        android:id="@+id/securityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/securityTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bahceden_foreground"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/securityBackButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/securityTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/nexa_heavy"
                android:text="Security"
                android:textColor="@color/bahceden_green"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Change Password"
                android:textColor="@color/bahceden_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/securityCurrentPasswordField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:paddingStart="8dp" />

            <EditText
                android:id="@+id/securityNewPasswordField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="New Password"
                android:inputType="textPassword"
                android:paddingStart="8dp" />

            <EditText
                android:id="@+id/securityConfirmNewPasswordField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:paddingStart="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/securityChangePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/long_button_background"
                android:backgroundTint="@color/bahceden_green"
                android:text="Change Password"
                android:textColor="@color/text_shadow_white" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>