<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_number"
            android:layout_width="170dp"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/nexa_heavy"
            android:text="Order #12345"
            android:textColor="@color/bahceden_green"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nexa_heavy"
            android:textColor="@color/black"
            android:text="2023-04-24"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/nexa_heavy"
            android:text="Total: $50.00"
            android:textColor="@color/bahceden_green"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:tint="@color/darkGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            android:layout_marginLeft="16dp"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/milk"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/nexa_heavy"
                android:text="Beyaz Milk"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_heavy"
                android:text="Status: Ongoing"
                android:textColor="@color/plus_green"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/bahceden_foreground"
                    android:text="Change Status"
                    android:fontFamily="@font/nexa_heavy"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_square"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/bahceden_foreground"
                    android:text="Details"
                    android:fontFamily="@font/nexa_heavy"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_square"
                    android:padding="4dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>