<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_curved_border"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/producer_bg_imageHolder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutProducerItemName">

        <ImageView
            android:id="@+id/producer_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ciftlik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/itemLayoutItemLiked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/bahceden_green"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/layoutProducerItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farm of Ali Baba"
        android:layout_margin="12dp"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/nexa_heavy"
        android:textColor="@color/bahceden_green"
        app:layout_constraintTop_toBottomOf="@id/producer_bg_imageHolder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_star"
        android:drawablePadding="4dp"
        android:drawableTint="@color/bahceden_green"
        android:paddingVertical="8dp"
        android:text="5"
        android:textColor="@color/bahceden_green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutProducerItemName"
        app:layout_constraintBottom_toBottomOf="@id/layoutProducerItemName"/>


</androidx.constraintlayout.widget.ConstraintLayout>