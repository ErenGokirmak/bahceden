<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemImageHolder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/milk"/>

        <ImageView
            android:id="@+id/itemLiked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite2"
            android:layout_gravity="end"
            android:layout_margin="8dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beyaz Milk"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_heavy"
        android:textColor="@color/bahceden_green"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/itemImageHolder"
        app:layout_constraintStart_toStartOf="@id/itemImageHolder" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/itemName"
        app:layout_constraintEnd_toEndOf="@id/itemImageHolder" />

    <TextView
        android:id="@+id/itemProducer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Inek"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_heavy"
        android:textColor="@color/darkGray"
        app:layout_constraintTop_toTopOf="@id/itemPrice"
        app:layout_constraintStart_toStartOf="@id/itemName"
        app:layout_constraintBottom_toBottomOf="@id/itemPrice"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/itemAddToCart"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/long_button_background"
        android:backgroundTint="@color/bahceden_green"
        android:fontFamily="@font/nexa_heavy"
        android:text="Add to Cart"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>