<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:id="@+id/editProfileTopBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bahceden_foreground"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/editProfileBack"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/editProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nexa_heavy"
            android:text="Edit Profile"
            android:textColor="@color/bahceden_green"
            android:textSize="25sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/editImageHolder"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editProfileTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileImageHolder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/profielImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                app:tint="@color/gray"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/ic_edit"
            android:backgroundTint="@android:color/transparent"
            android:outlineProvider="none">

            <ImageView
                android:id="@+id/editImage"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/editImageHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Full Name"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/darkGray" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/darkGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <com.hbb20.CountryCodePicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:ccp_showNameCode="false"
                android:gravity="center"
                android:background="@drawable/edit_text_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"
                android:hint="Phone Number"
                android:padding="12dp"
                android:inputType="phone"
                android:textColorHint="@color/darkGray"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/UpdateHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/nexa_heavy"
            android:textColor="@color/white"
            android:paddingVertical="8dp"
            android:paddingHorizontal="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/long_button_background"
            android:backgroundTint="@color/bahceden_green"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>