<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/bahceden_beige_light">

    <ImageView
        android:id="@+id/bahcedenImg"
        android:layout_width="240dp"
        android:layout_height="268dp"
        app:layout_constraintBottom_toTopOf="@id/bySwifties"
        app:layout_constraintEnd_toEndOf="@+id/bahcedenSplash"
        app:layout_constraintStart_toStartOf="@+id/bahcedenSplash"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bahcedenlogo" />

    <TextView
        android:id="@+id/bySwifties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bahcedenImg"
        android:text="@string/by_swifties"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/bahceden_green"/>

    <TextView
        android:id="@+id/bahcedenSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:fontFamily="@font/the_bold_font"
        android:text="BAHÃ‡EDEN"
        android:textColor="@color/bahceden_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bahcedenImg" />

</androidx.constraintlayout.widget.ConstraintLayout>