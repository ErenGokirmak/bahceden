<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/long_button_background"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/smallDukkanImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/jam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@color/bahceden_green"
        app:layout_constraintTop_toTopOf="@id/smallDukkanImage"
        app:layout_constraintEnd_toEndOf="@id/smallDukkanImage">


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/smallDukkanImage"
        app:layout_constraintStart_toStartOf="@id/smallDukkanImage">



        <TextView
            android:id="@+id/smallDukkanName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/nexa_heavy"
            android:text="Swifties"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="30 mins."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="20dp"
            android:text="min. $20"
            app:layout_constraintStart_toStartOf="@id/smallDukkanName"
            app:layout_constraintTop_toBottomOf="@id/smallDukkanImage"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>