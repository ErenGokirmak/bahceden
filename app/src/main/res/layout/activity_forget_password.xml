<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgetPasswordBack"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingTop="12dp"
        android:drawableTop="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/bahceden_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:fontFamily="@font/nexa_heavy"
        android:textColor="@color/bahceden_green"
        android:textSize="28sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/forgetPasswordBack"
        app:layout_constraintTop_toTopOf="@id/forgetPasswordBack"
        app:layout_constraintBottom_toBottomOf="@id/forgetPasswordBack" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lockImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/forgetPasswordBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintTop_toBottomOf="@id/lockImage"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgetContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/long_button_background"
        android:backgroundTint="@color/bahceden_green"
        android:fontFamily="@font/nexa_heavy"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/fragmentLayout"
        app:layout_constraintStart_toStartOf="@id/fragmentLayout"
        app:layout_constraintTop_toBottomOf="@id/fragmentLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>