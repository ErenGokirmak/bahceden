<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProducerCreateListingActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bahceden_foreground"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/createListingTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nexa_heavy"
            android:text="@string/create_listing"
            android:textColor="@color/bahceden_green"
            android:textSize="26sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:id="@+id/newItemInfoFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:elevation="10dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/plus"
                    app:tint="@color/bahceden_green"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <Spinner
                android:id="@+id/addItemSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curved_border"
                android:layout_marginVertical="8dp" />

            <EditText
                android:id="@+id/nameOfItemField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:autofillHints="name"
                android:padding="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Name"
                android:paddingVertical="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColorHint="@color/darkGray"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/descriptionOfItemField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:autofillHints="name"
                android:padding="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:paddingVertical="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColorHint="@color/darkGray"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/priceOfItemField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:background="@drawable/edit_text_background"
                android:hint="Price"
                android:padding="8dp"
                android:inputType="numberDecimal"
                android:paddingVertical="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColorHint="@color/darkGray"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/long_button_background"
        android:backgroundTint="@color/bahceden_green"
        android:fontFamily="@font/nexa_heavy"
        android:paddingVertical="8dp"
        android:text="Add Item"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/producer_bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>